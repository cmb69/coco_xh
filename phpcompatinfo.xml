<?xml version="1.0" encoding="utf-8"?>
<phpcompatinfo reference="ALL"
               report="summary"
               reportFileAppend="false"
               cacheDriver="file"
               recursive="true"
               fileExtensions="php, htm"
               consoleProgress="false"
               verbose="false">

    <excludes>
        <exclude id="coco">
            <directory name="tests"/>
            <directory name="vendor"/>

            <!-- we're using the $recursive parameter -->
            <function name="mkdir"/>
        </exclude>
    </excludes>
</phpcompatinfo>
