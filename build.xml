<?xml version="1.0" encoding="UTF-8"?>

<project name="Coco" default="help">

    <fileset id="php-sources" dir=".">
        <include name="index.php"/>
        <include name="search.php"/>
    </fileset>

    <fileset id="js-sources" dir=".">
        <include name="*.js"/>
    </fileset>

    <fileset id="attack-tests" dir="tests/attack">
        <include name="*Test.php"/>
    </fileset>

    <target name="help" description="lists available targets">
        <exec command="phing -l" outputProperty="help"/>
        <echo>${help}</echo>
    </target>

    <target name="sniff" description="checks adherence to coding standards">
        <phpcodesniffer standard="PSR2" format="full">
            <fileset refid="php-sources"/>
            <fileset refid="attack-tests"/>
        </phpcodesniffer>
    </target>

    <target name="stan" description="runs static code analysis">
        <exec executable="phpstan" passthru="true" checkreturn="true"/>
    </target>

    <target name="mess" description="detects code flaws">
        <phpmd>
            <fileset refid="php-sources"/>
         </phpmd>
    </target>

    <target name="compat" description="ecks PHP requirements">
        <exec command="phpcompatinfo analyser:run --alias current" logoutput="true"/>
    </target>

    <target name="attack-tests" description="runs all attack tests">
        <fail unless="env.CMSIMPLEDIR" message="CMSIMPLEDIR undefined!"/>
        <phpunit haltonerror="true" haltonfailure="true">
            <formatter type="plain" usefile="false"/>
            <batchtest>
                <fileset refid="attack-tests"/>
            </batchtest>
        </phpunit>
    </target>

    <target name="gen-help" description="builds help.htm from README.md">
        <exec executable="pandoc" passthru="true" checkreturn="true">
            <arg line="-s --eol=lf --template=help/template.htm -Vlang=en -Vpagetitle=&quot;User Manual&quot; -o help/help.htm README.md -t html"/>
        </exec>
        <exec executable="pandoc" passthru="true" checkreturn="true">
            <arg line="-s --eol=lf --template=help/template.htm -Vlang=de -Vpagetitle=&quot;Benutzerhandbuch&quot; -o help/help_de.htm README_de.md -t html"/>
        </exec>
    </target>

    <target name="build" description="builds a distributable ZIP archive">
        <exec command="git archive -o export.zip HEAD" checkreturn="true"/>
        <unzip file="export.zip" todir="export"/>
        <delete file="export.zip"/>
        <move todir="dist">
            <fileset dir="export">
                <exclude name=".phive/**"/>
                <exclude name=".phpstan/**"/>
                <exclude name="help/template.htm"/>
                <exclude name="tests/**"/>
                <exclude name="composer.*"/>
                <exclude name="build.xml"/>
                <exclude name="phpcompatinfo.*"/>
                <exclude name="phpstan.neon"/>
                <exclude name="README*.md"/>
                <exclude name="teplad.xml"/>
            </fileset>
        </move>
        <delete dir="export"/>
        <!--<copy file="dist/config/config.php" tofile="dist/config/defaultconfig.php"/>-->
        <copy file="dist/languages/en.php" tofile="dist/languages/default.php"/>
        <zip destfile="Coco_XH-2.0-dev.zip" basedir="dist" prefix="coco/"/>
        <delete dir="dist"/>
    </target>

</project>
